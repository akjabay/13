{
  "compilerOptions": {
    // "module": "ESNext",
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "disableSourceOfProjectReferenceRedirect": false,
    // "preserveConstEnums": false,
    "rootDir": "./",
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@iioi/autoplay/*": ["./packages/autoplay/src/*"],
      "@iioi/bot-api/*": ["./packages/bot-api/src/*"],
      "@iioi/bot-api": ["./packages/bot-api/src/index.js"],
      "@iioi/client/*": ["./packages/client/src/*"],
      "@iioi/server/*": ["./packages/server/src/*"],
      "@iioi/shared/*": ["./packages/shared/src/*"],
      "@iioi/sprite/*": ["./packages/sprite/src/*"],
      "@iioi/tools/*": ["./packages/tools/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
